<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_icon_center"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_above="@+id/text_hello"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:src="@drawable/ic_screen_admin" />

        <TextView
            android:id="@+id/text_hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="Hello World!" />

        <Button
            android:id="@+id/btn_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_hello"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="Click" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_icon_centerr"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_above="@+id/text_helloo"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_magnifier" />

            <TextView
                android:id="@+id/text_helloo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="Hello World!" />

            <Button
                android:id="@+id/btn_clickk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_hello"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="Click" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_icon_centerrr"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_above="@+id/text_hellooo"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_loudspeaker_lapor" />

            <TextView
                android:id="@+id/text_hellooo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="Hello World!" />

            <Button
                android:id="@+id/btn_clickkk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_hello"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="Click" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_icon_centerrrr"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_above="@+id/text_hello"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:src="@drawable/ic_paper_list" />

            <TextView
                android:id="@+id/text_helloooo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="Hello World!" />

            <Button
                android:id="@+id/btn_clickkkk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_hello"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:text="Click" />


        </LinearLayout>

    </LinearLayout>
    </LinearLayout>

</RelativeLayout>

